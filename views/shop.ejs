               <!-- CARDS -->
               <h2 class="margin-all mt-5">Productos para ti</h2>

    <section class="B-cards" id="cards">

    
    <!-- toda la card -->
    <% products.forEach(product => { %>
      <div class="B-todoCard">
        <div class="B-CardFotos">
          <img src="<%= product.imagen %>" alt="" class="B-imagenCard">
          <div class="B-corazonDiv">
            <img src="/img/corazon.svg" alt="" class="B-corazon">
          </div>
        </div>
        <div class="B-texto">
          <div class="B-namePrecio">
            <h4 class="B-name"><%= product.nombre %></h4>
            <h3 class="B-precio"> $<%= product.precio %></h3>
          </div>
          
          <div class="B-stars">
            <div>
              <img src="/img/star.svg" alt="" class="B-estrellasIMG">
              <img src="/img/star.svg" alt="" class="B-estrellasIMG">
              <img src="/img/star.svg" alt="" class="B-estrellasIMG">
              <img src="/img/star.svg" alt="" class="B-estrellasIMG">
              <img src="/img/star.svg" alt="" class="B-estrellasIMG">
            </div>
            <div>
              <p class="B-numeroStar">(121)</p>
            </div>
          </div>
            <form action="/carrito/agregar" method="post">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <button class="B-AddCart" onclick="agregarAlCarrito('<%= product._id %>')">AÃ±adir al carrito</button>
          </form>
        </div>
      </div>
    <% }); %>
    
     </section>


